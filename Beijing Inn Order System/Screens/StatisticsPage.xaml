<UserControl x:Class="Beijing_Inn_Order_System.Screens.StatisticsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Beijing_Inn_Order_System.Screens.StatisticsPageElements"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="768">
    <Grid>
        <TabControl>
            <TabItem Header="ITEM SALES">
                <controls:ItemSalesWindow />
            </TabItem>
            <TabItem Header="CUSTOMERS">
                <controls:PreviousCustomersWindow />
            </TabItem>
            <TabItem Header="ORDER LOG">
                <controls:OrderLogWindow />
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
