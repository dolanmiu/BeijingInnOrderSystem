<UserControl x:Class="Beijing_Inn_Order_System.ManagePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:tabData="Beijing_Inn_Order_System"
             xmlns:controls="clr-namespace:Beijing_Inn_Order_System.Screens.ManagePageElements"
             mc:Ignorable="d" Loaded="OnLoad"
             d:DesignHeight="502" d:DesignWidth="1024"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <TabControl>
            <TabItem Header="ITEM SALES">
                <controls:ItemSalesWindow />
            </TabItem>
            <TabItem Header="CUSTOMERS">
                <controls:PreviousCustomersWindow />
            </TabItem>
            <TabItem Header="ORDER LOG">
                <controls:OrderLogWindow />
            </TabItem>
            <TabItem Header="SETTINGS">
                <controls:SettingsWindow />
            </TabItem>
            <TabItem Header="MENU DESIGNER" x:Name="MenuDesignerTab">
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
